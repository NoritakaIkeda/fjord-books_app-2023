<!DOCTYPE html>
<html>
  <head>
    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        <%= t('activerecord.attributes.navbar.logged_in_as', email: current_user.email) %> |
        <%= link_to t('activerecord.attributes.navbar.edit_profile'), edit_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('activerecord.attributes.navbar.logout'), destroy_user_session_path, method: :delete, class: 'navbar-link' %>
      <% else %>
        <%= link_to t('activerecord.attributes.navbar.signup'), new_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('activerecord.attributes.navbar.login'), new_user_session_path, class: 'navbar-link' %>
      <% end %>
    </p>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
    <%= yield %>
  </body>
</html>
